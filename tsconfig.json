{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "typeRoots": ["./src/types", "./node_modules/@types"],

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
